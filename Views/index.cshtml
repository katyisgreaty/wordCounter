@{
    Layout="Shared/_Layout.cshtml";
}

<form action="/results" method="post">
    <div class="form-group">
        <label for="phrase">Enter your phrase:</label>
        <input type="test" name="phrase" id="phrase" required>
    </div>
    <div class="form-group">
        <label for="word">Enter the word you would like to search for in your phrase:</label>
        <input type="test" name="word" id="word" required>
    </div>
    <button type="submit" class="btn btn-md btn-primary">Count how many times your word shows up in the phrase!</button>
</form>
