@{
    Layout="Shared/_Layout.cshtml";
}

@* <h3>@Model.GetWord() is in your phrase "@Model.GetPhrase()" @Model.CountRepeats() *@
    @if (@Model.CountRepeats() > 1)
    {
        <h3>@Model.GetWord() is in your phrase "@Model.GetPhrase()" @Model.CountRepeats() times.</h3>
    }
    else
    {
        <h3>@Model.GetWord() is in your phrase "@Model.GetPhrase()" @Model.CountRepeats() time. </h3>
    }
